{
  "flow_type": "template",
  "flow_name": "feature_items",
  "status": "released",
  "flow_subtype": "debug",
  "rows": [
    {
      "type": "title",
      "name": "title_default",
      "value": "Items - default",
      "comments": "Items will display in standard way (column with padding between rows)"
    },
    {
      "type": "begin_items",
      "name": "items_default",
      "value": "@data.feature_items_data"
    },
    {
      "type": "text",
      "name": "text_@item.id",
      "value": "@item.title"
    },
    {
      "type": "button",
      "name": "button_@item.id",
      "value": "@item.button_text",
      "action_list": "click | go_to: @item.link"
    },
    {
      "type": "end_items"
    },
    {
      "type": "title",
      "name": "title_dg",
      "value": "Items - display group",
      "comments": "Items will display all in a single row"
    },
    {
      "type": "begin_display_group",
      "name": "dg"
    },
    {
      "type": "begin_items",
      "name": "items_dg",
      "value": "@data.feature_items_data"
    },
    {
      "type": "text",
      "name": "text_@item.id",
      "value": "@item.title"
    },
    {
      "type": "button",
      "name": "button_@item.id",
      "value": "@item.button_text",
      "action_list": "click | go_to: @item.link"
    },
    {
      "type": "end_items"
    },
    {
      "type": "end_display_group"
    },
    {
      "type": "title",
      "name": "title_dg2",
      "value": "Items - group within group",
      "comments": "Items will display in a row, but with each item grouped in a column within the row"
    },
    {
      "type": "begin_display_group",
      "name": "dg2a"
    },
    {
      "type": "begin_items",
      "name": "items_dg",
      "value": "@data.feature_items_data"
    },
    {
      "type": "begin_display_group",
      "name": "dg2b",
      "parameter_list": "style: column"
    },
    {
      "type": "text",
      "name": "text_@item.id",
      "value": "@item.title"
    },
    {
      "type": "button",
      "name": "button_@item.id",
      "value": "@item.button_text",
      "action_list": "click | go_to: @item.link"
    },
    {
      "type": "end_display_group"
    },
    {
      "type": "end_items"
    },
    {
      "type": "end_display_group"
    }
  ]
}